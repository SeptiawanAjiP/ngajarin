<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="2dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp">
            <!--first line-->
            <ImageView
                android:id="@+id/booking_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/abacus"/>
            <TextView
                android:id="@+id/booking_school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/booking_icon"
                android:layout_alignTop="@id/booking_icon"
                android:layout_alignBottom="@id/booking_icon"
                android:layout_marginStart="12dp"
                android:gravity="center"
                android:text="SD"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:textColor="@color/grey_text"/>
            <TextView
                android:id="@+id/booking_devider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/booking_school"
                android:layout_alignTop="@id/booking_icon"
                android:layout_alignBottom="@id/booking_icon"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textSize="18sp"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/grey_text"/>
            <TextView
                android:id="@+id/booking_materi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/booking_devider"
                android:layout_alignTop="@id/booking_icon"
                android:layout_alignBottom="@id/booking_icon"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:gravity="center"
                android:textSize="18sp"
                android:text="Bahasa Indonesia"
                android:textStyle="bold"
                android:textColor="@color/grey_text"/>
            <ImageView
                android:id="@+id/flag_complete"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_check_circle_black"
                android:tint="@android:color/holo_green_light"
                />
            <!--end first line-->

            <!--start second line-->
            <TextView
                android:id="@+id/booking_status_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_below="@id/booking_icon"
                android:text="status :"
                android:textSize="14sp"
                android:textColor="@color/black30"/>
            <TextView
                android:id="@+id/booking_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_alignTop="@id/booking_status_holder"
                android:layout_alignBottom="@id/booking_status_holder"
                android:layout_toEndOf="@id/booking_status_holder"
                android:textColor="@android:color/holo_red_light"
                android:text="menunggu konfirmasi"
                android:textSize="14sp"/>
            <!--end second line-->

            <!--start third line-->
            <TextView
                android:id="@+id/booking_jadwal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="14sp"
                android:layout_below="@id/booking_status_holder"
                android:text="Rabu 27 Oktober 2017, 18:00"
                android:textColor="@color/black30"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>